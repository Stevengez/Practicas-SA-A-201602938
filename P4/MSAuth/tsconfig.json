{
    "compilerOptions": {
      "rootDirs": ["src"],
      "outDir": "dist",
      "lib": ["es2022"],
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "nodenext",
      "esModuleInterop": true,
      "types": ["node"],
      "experimentalDecorators": true,
      "declaration": true,
      "strict": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./node_modules",
        "./dist",
        "./src/**/*.test.ts"
    ],
    "ts-node": {
        "esm": true,
        "transpileOnly": true
    }
  }